@using System.Threading
@using System.Web.Optimization
@using Abp.Timing
@using Abp.Web.Mvc.Extensions
@using BriefShop
@{
	SetAntiForgeryCookie();
}
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<meta name="description" content="">
	<meta name="author" content="">
	<link rel="shortcut icon" href="~/favicon.ico">
	<title>BriefShop</title>
	@Html.IncludeStyle("~/Vendors/linearicons/css/linearicons.css")
	@Html.IncludeStyle("~/Vendors/owl-carousel/owl.carousel.min.css")
	@Html.IncludeStyle("~/Vendors/owl-carousel/owl.theme.min.css")
	@Html.IncludeStyle("~/Vendors/flexslider/flexslider.css")

	@Styles.Render("~/Bundles/vendor/css")
	@Styles.Render("~/Bundles/css")
	<!-- View specific styles -->
	@RenderSection("styles", required: false)
	<script type="text/javascript">
        //This is used to get the application's root path from javascript. It's useful if you're running application in a virtual directory under IIS.
        var abp = abp || {}; abp.appPath = '@ApplicationPath';
	</script>
</head>
<body class="login-page">
	<div class="login-box">
		<div class="logo p-10 color-darker t-center mt-30">
			<h1>BriefShop</h1>
		</div>
		@RenderBody()
		<div class="row">
			<div class="col-xs-12 text-center" style="color: #e9e9e9">
				<small>&copy; @DateTime.Now.Year BriefShop. <b>Version </b> </small>
			</div>
		</div>
	</div>
	@Html.IncludeScript("~/Scripts/jquery-3.3.1.min.js")

	@Scripts.Render("~/Bundles/vendor/js/bottom")
	@Html.IncludeScript("~/Vendors/modernizr/modernizr-2.6.2.min.js")
	@Html.IncludeScript("~/Vendors/owl-carousel/owl.carousel.min.js")
	@Html.IncludeScript("~/Vendors/flexslider/jquery.flexslider-min.js")
	@Html.IncludeScript("~/Vendors/countdown/jquery.countdown.js")
	@Html.IncludeScript("~/Vendors/qqq.js")
	<script>
        //Localizing momentjs
        moment.locale('@Thread.CurrentThread.CurrentUICulture.Name');
	</script>
	<!-- Dynamic scripts of ABP system (They are created on runtime and can not be bundled) -->
	<script src="~/api/AbpServiceProxies/GetAll?v=@(Clock.Now.Ticks)"></script>
	<script src="~/AbpScripts/GetScripts?v=@(Clock.Now.Ticks)" type="text/javascript"></script>
	<!-- View specific scripts -->
	@RenderSection("scripts", required: false)
</body>
</html>
